---
import "@/styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Rédactrice Web SEO de haut vol - Design & Performance." } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Fonts: Instrument Serif & Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet" />
    
    <style>
      :root {
        --font-serif: 'Instrument Serif', serif;
        --font-sans: 'Inter', sans-serif;
      }
      
      body {
        font-family: var(--font-sans);
        background-color: #fafaf9; /* Stone-50 */
        color: #1c1917; /* Stone-900 */
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      h1, h2, h3, h4, .font-serif {
        font-family: var(--font-serif);
      }
    </style>
  </head>
  <body class="min-h-screen selection:bg-stone-200 selection:text-stone-900">
    <div class="relative flex min-h-screen flex-col">
      <!-- Background grain effect (optional but pro) -->
      <div class="pointer-events-none fixed inset-0 z-50 opacity-[0.03] mix-blend-multiply transition-opacity" style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"></div>
      
      <header class="sticky top-0 z-40 w-full border-b border-stone-200/50 bg-stone-50/80 backdrop-blur-md">
        <div class="container mx-auto flex h-20 items-center justify-between px-4 sm:px-6 lg:px-8">
          <div class="flex gap-6 md:gap-10">
            <a href="/" class="flex items-center space-x-2">
              <span class="inline-block text-xl font-serif italic tracking-tight uppercase">Djihene Fenzar</span>
            </a>
          </div>
          <nav class="hidden md:flex gap-8 text-sm font-medium uppercase tracking-widest text-stone-500">
            <a href="#services" class="hover:text-stone-900 transition-colors">Services</a>
            <a href="#mission" class="hover:text-stone-900 transition-colors">Ma Mission</a>
            <a href="#a-propos" class="hover:text-stone-900 transition-colors">À Propos</a>
            <a href="#temoignages" class="hover:text-stone-900 transition-colors">Témoignages</a>
          </nav>
          <div class="flex items-center gap-4">
             <a href="#contact" class="inline-flex h-10 items-center justify-center rounded-full bg-stone-900 px-6 text-sm font-medium text-stone-50 transition-colors hover:bg-stone-800">
               Discutons
             </a>
          </div>
        </div>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-stone-200 bg-stone-50 py-12">
        <div class="container mx-auto px-4 text-center">
          <p class="text-sm text-stone-500">
            © {new Date().getFullYear()} — Conçu pour l'excellence SEO.
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
